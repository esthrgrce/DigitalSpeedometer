<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202A35"
    tools:context=".Speedometer">

    <TextView
        android:id="@+id/lbldistance"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="0.00"
        android:textColor="#04FFE3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/lbldistance_unit"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="km"
        android:textColor="#04FFE3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbldistance"
        app:layout_constraintStart_toEndOf="@+id/lbldistance"
        app:layout_constraintTop_toTopOf="@+id/lbldistance" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="Time"
        android:textColor="#DDE6E5"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/lblmaxspeed"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="60"
        android:textColor="#04FFE3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/lblmaxspeed_unit"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="kph"
        android:textColor="#04FFE3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/lblmaxspeed"
        app:layout_constraintStart_toEndOf="@+id/lblmaxspeed"
        app:layout_constraintTop_toTopOf="@+id/lblmaxspeed"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="Maximum Speed"
        android:textColor="#DDE6E5"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="Distance"
        android:textColor="#DDE6E5"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/lbltime"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#04FFE3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/lblspeed"
        android:layout_width="163dp"
        android:layout_height="139dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="0"
        android:textColor="#04FFE3"
        android:textSize="120sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/lblspeed_unit"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:fontFamily="@font/quantico"
        android:gravity="center"
        android:text="kph"
        android:textColor="#DDE6E5"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="@drawable/toolbar_speedometer"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>